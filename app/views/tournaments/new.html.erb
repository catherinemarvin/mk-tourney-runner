<h1>New Tournament</h1>

<%= form_with model: @tournament do |form| %>
    <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>

    <div>
        <%= form.label :players %>
        <%= text_area_tag :players %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>